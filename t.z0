;; Instructions

(def (rex ?w ?r ?x ?b)
  (<<< 4 4 ?w 1 ?r 1 ?x 1 ?b 1))

(def (mod/rm ?mod ?r ?m)
  (<<< ?mod 2 ?r 3 ?m 3))

(def (op/rr ?op ?dst ?src)
  (1 (rex 1 (>> ?src 3) 0 (>> ?dst 3)) ?op (mod/rm 3 ?src ?dst)))

(def (set (reg ?dst) ?val)
  (1 (rex 1 0 0 (>> ?dst 3)) 0xc7 (mod/rm 3 0 ?dst))
  (4 ?val))

(def (set (reg ?dst) (reg ?src))
  (op/rr 0x89 ?dst ?src))

(def (call ?addr)
  (1 0xe8)
  (-4 ?addr))

(def (ret)
  (1 0xc3))

(def (syscall)
  (1 0x0F 0x05))

;; Init

(code start
  (call main)
  (call exit))

;; Syscalls

;; Args go to r7, r6, r2, r10, r8, r9, number to r0.

(def (defsyscall ?func ?num)
  (code ?func
    (set r7 r0)
    (set r6 r1)
    (set r0 ?num)
    (syscall)
    (ret)))

(defsyscall write  1)
(defsyscall exit  60)

(code main
  (set r0 1)
  (set r1 message)
  (set r2 (- message:end message))
  (call write)
  (set r0 0)
  (ret))

(code
message
  (1 "Hello World" :nl)
message:end)
