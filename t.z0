;; Utilities

(def (seq ?f ?start ?inc ?a)
  (?f ?a ?start))

(def (seq ?f ?start ?inc ?a ?b . ?rest)
  (begin (?f ?a ?start) (seq ?f (+ ?start ?inc) ?inc ?b . ?rest)))

(def (defenum . ?rest)
  (seq def 0 1 . ?rest))

(def (deftypedenum-accum ?accum ?type)
  (begin))

(def (deftypedenum-accum ?accum ?type ?member . ?rest)
  (begin
    (def ?member (?type ?accum))
    (deftypedenum-accum (+ ?accum 1) ?type . ?rest)))

(def (deftypedenum ?type . ?members)
  (deftypedenum-accum 0 ?type . ?members))

(def (<<<-accum ?accum)
  ?accum)

(def (<<<-accum ?accum ?val ?bits . ?rest)
  (<<<-accum (or (<< ?accum ?bits)
                 (and ?val (- (<< 1 ?bits) 1)))
             . ?rest))

(def (<<< . ?rest)
  (<<<-accum 0 . ?rest))

;; Registers

(deftypedenum reg
  r0  r1  r2  r3  r4  r5  r6  r7
  r8  r9 r10 r11 r12 r13 r14 r15)

